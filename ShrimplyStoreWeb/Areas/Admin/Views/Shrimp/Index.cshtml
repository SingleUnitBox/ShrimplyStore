@model IEnumerable<Shrimp>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">
                    Shrimp List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Shrimp" asp-action="Upsert">
                    <i class="bi bi-plus-circle-dotted"></i>&nbsp; Create
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Price</th>
                    <th>Bar Code</th>
                    <th>Species</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/shrimp.js"></script>
}

