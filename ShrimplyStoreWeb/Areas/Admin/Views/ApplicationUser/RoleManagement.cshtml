@model RoleManagementViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Manage User Role</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div>
                            <input hidden asp-for="@Model.ApplicationUser.Id" />
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.ApplicationUser.Name" readonly type="text" class="form-control border-0 shadow" />
                                <label asp-for="@Model.ApplicationUser.Name" class="ms-2"></label>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select border-0 shadow">
                                </select>
                            </div>
                            @{
                                var styleDisplay = "display:none;";
                            }
                            @if (Model.ApplicationUser.Role == SD.Role_Company)
                            {
                                styleDisplay = "display:block;";
                            }
                            <div class="form-floating py-2 col-12">
                                <select asp-for="ApplicationUser.CompanyId" style=@styleDisplay asp-items="@Model.CompanyList" class="form-select border-0 shadow">
                                </select>
                            </div>
                            <a asp-action="Index" class="btn btn-outline-primary">Back</a>
                            <button class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#ApplicationUser_Role').change(function () {
                var selection = $('#ApplicationUser_Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#ApplicationUser_CompanyId').show();
                }
                else {
                    $('#ApplicationUser_CompanyId').hide();
                }
            })
        })
    </script>
}