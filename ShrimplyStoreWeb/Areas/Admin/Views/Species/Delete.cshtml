@model Species


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">
                    Delete Species
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" type="text" class="form-control border-0 shadow" disabled />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" disabled />
                        <label asp-for="DisplayOrder" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-primary">Back</a>
                    <button class="btn btn-danger">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>
