@model IEnumerable<Species>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">
                    Species List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Species" asp-action="Create">
                    <i class="bi bi-plus-circle-dotted"></i>&nbsp; Create
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Species
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var species in Model)
            {
                <tr>
                    <td>
                        @species.Name
                    </td>
                    <td>
                        @species.DisplayOrder
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@species.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"> &nbsp; Edit</i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@species.Id" class="btn btn-danger">
                            <i class="bi bi-trash"> &nbsp; Delete</i>
                        </a>

                    </td>
                </tr>
            }
        </table>
    </div>
</div>

